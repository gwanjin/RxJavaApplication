<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment">

    <TextView
        android:id="@+id/mainfragment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainfragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button"/>

        <Button
            android:id="@+id/mainfragment_lambda_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lambda button"/>

        <Button
            android:id="@+id/mainfragment_binding_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biding button"/>
    </LinearLayout>

    <ListView
        android:id="@+id/mainfragment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"/>

</LinearLayout>